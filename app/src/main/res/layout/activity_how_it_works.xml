<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SetDate"
    android:id="@+id/drawer_layout"
    >
    <com.google.android.material.navigation.NavigationView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:id="@+id/nav_view"
        app:headerLayout="@layout/menu_header"
        app:itemTextColor="@color/green"
        app:menu="@menu/main_menu"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/firstLayout"
            android:layout_width="match_parent"
            android:layout_height="93dp"
            android:background="@drawable/top_bg"
            android:elevation="3dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="45dp"
                android:src="@drawable/ic_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="10dp"
                android:text="Sell scrap"
                android:textColor="@color/white"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/cancel"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="95dp"
                android:layout_marginTop="15dp"
                android:textColor="@color/white"
                android:textSize="17sp" />

        </LinearLayout>


        <LinearLayout
            android:layout_below="@id/firstLayout"
            android:layout_marginTop="40dp"
            android:layout_marginHorizontal="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_marginVertical="5dp"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:layout_gravity="fill_horizontal"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:fontFamily="@font/montserrat"
                android:text="1. Select your Location!"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_marginVertical="5dp"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:layout_gravity="fill_horizontal"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:fontFamily="@font/montserrat"
                android:text="2. Choose the scrap you want to sell"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_marginVertical="5dp"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:layout_gravity="fill_horizontal"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:fontFamily="@font/montserrat"
                android:text="3. Select the date you’ll be available on."/>
            <TextView
                android:layout_width="match_parent"
                android:layout_marginVertical="5dp"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:layout_gravity="fill_horizontal"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:fontFamily="@font/montserrat"
                android:text="4. The Pickup guy will take all the item’s you’ve selected"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_marginVertical="5dp"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:layout_gravity="fill_horizontal"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:fontFamily="@font/montserrat"
                android:text="5.Yay that was damn simple isn’t it?! Get instant cash or you can Donate!"/>
            <ImageView
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/onboard02"
                />
        </LinearLayout>
    </RelativeLayout>



</androidx.drawerlayout.widget.DrawerLayout>
